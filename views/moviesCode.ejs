<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- head -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title></title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
    integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" 
    crossorigin="anonymous">

    <!-- style phần header -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css">

  </head>
  <body>

  <!-- header -->
  <!-- thanh dieu huong -->
    <nav class="navbar navbar-fixed-top">
      <div class="content-padding">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/">Home</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Movies <i class="fa fa-chevron-down"></i></a>
            <ul class="dropdown-menu">
              <% for (var i = 1; i <= movies.length; i++) { %>
              <li>
                <a href="/Phim/<%= i %>" class="episode_link"><%= movies[i - 1].title %></a>
              </li>
              <% } %>	
            </ul> <!-- dropdown-menu -->
          </li> <!-- dropdown -->
        </ul> <!-- navbar-nav -->
      </div>

    </nav>





    <!-- bia -->
    <div id="hero-image-single" style="background-image: url('/images/<%= movie.hero_image %>');">
      <h1 id="hero-title"><%= title %></h1>
    </div>

  <!-- poster -->
<div class="content-padding clearfix">
		<div class="single-poster-wrapper">
      <img src="/images/<%= movie.poster %>" class="img-responsive">
      <div class="single-poster-info-overlay">
        <h3><%= title %></h3>
        <h4>Click xem chi tiết-> <i class="fa fa-arrow-right"></i></h4>
      </div>

</div>

    <!--gioi thieu phim-->
    <div class="description-wrapper">
      <!-- mo ta -->
      <div class="description">
          <h2 class="movie-header">Giới thiệu nội dung</h2>
          <p><%= movie.description %></p>
      </div>
    
    <!-- nhan vat chinh -->
      <div class="main-characters">
        <h2 class="movie-header">Nhân vật chính</h2>
        <ul>
        <% for (var i = 0; i < main_characters.length; i++) { %>
          <li><%= main_characters[i] %></li>
        <% } %>
        </ul>
      </div>
  </div>
</div>

<div id="movie-container">
  <iframe src="<%= movie.link %>" 
  width="1200" height="611" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowfullscreen="true" allow="autoplay; 
  clipboard-write; encrypted-media; picture-in-picture; web-share" allowFullScreen="true"></iframe>
</div>

    <!-- script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" 
    integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" 
    crossorigin="anonymous"></script>
  </body>
  
  <footer>
    <div class="content-padding">
      <div class="footer-content">
        <p>Thông tin liên lạc &copy; phanhung16299@gmail.com</p>
      </div>
    </div>
  </footer>
</html>